<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HeaderLabel" TargetType="Label">
        <Setter Property="FontSize" Value="32"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"></Setter>
        <Setter Property="Foreground" Value="#FF111111"></Setter>
    </Style>
    <Style x:Key="DetailHeader" TargetType="Label" BasedOn="{StaticResource HeaderLabel}">
        <Setter Property="FontSize" Value="16px"></Setter>
        <Setter Property="FontFamily" Value="Segoe UI Light"></Setter>
        <Setter Property="Foreground" Value="Gray"></Setter>
    </Style>
</ResourceDictionary>